<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- overrides FOS userbundle Registration forms -->
        <service id="ffn_user.registration.form.type" class="FFN\UserBundle\Form\Type\RegistrationFormType">
            <tag name="form.type" alias="ffn_user_registration" />
            <argument>%fos_user.model.user.class%</argument>
        </service>
        
        <!-- overrides FOS userbundle registration callbacks -->
        <service id="ffn_user.form.handler.registration" class="FFN\UserBundle\Form\Handler\RegistrationFormHandler" scope="request" public="false">
            <argument type="service" id="fos_user.registration.form" />
            <argument type="service" id="request" />
            <argument type="service" id="fos_user.user_manager" />
            <argument type="service" id="fos_user.mailer" />
            <argument type="service" id="fos_user.util.token_generator" />
        </service>
    </services>
</container>
