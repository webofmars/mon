<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Mon is an utility to monitor the performances and the health of your websites and web applications">
        <meta name="author" content="Webofmars">
        {% block metarefresh %}
        {% endblock %}
        <title>{% block pagetitle %}{{ 'mon_title' | trans }}{% endblock %}</title>
    {% stylesheets
      'bundles/ffnmon/css/bootstrap.css'
      'bundles/ffnmon/css/style.css'
      filter="cssrewrite, yui_css" output="css/all.css"
    %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    </head>
<body>
    {% block header %}
        {% include 'FFNMonBundle:Common:header_navbar.html.twig' %}
    {% endblock %}

    {% block body %}
    {% endblock %}

    {% block footer %}
        {% include 'FFNMonBundle:Common:footer.html.twig' %}
    {% endblock %}

{% block javascripts %}
    {% javascripts
        '@FFNMonBundle/Resources/public/js/jquery-1.9.1.js'
        '@FFNMonBundle/Resources/public/js/jquery.tablesorter.js'
        '@FFNMonBundle/Resources/public/js/bootstrap.js'
        '@FFNMonBundle/Resources/public/js/app.js'
            output='js/app.js'
            filter='yui_js' %}
        <script src="{{ asset_url}}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>