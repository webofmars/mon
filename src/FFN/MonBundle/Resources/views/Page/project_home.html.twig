{% extends 'FFNMonBundle::layout.html.twig' %}
{% set nb_scenarios = scenarios|length %}
{% block body %}
<div class="container">
  {% include 'FFNMonBundle:Common:project_headerbar.html.twig' %}
  {% if nb_scenarios > 0 %}
  <table class="table table-striped">
    <caption>Liste des scenarios</caption>
    <thead>
      <tr>
        <th>id</th>
        <th>nom</th>
        <th>action</th>
      </tr>
    </thead>
    <tbody>
      {% for scenario in scenarios %}
      <tr>
        <td>{{scenario.id}}</td>
        <td>{{scenario.name}}</td>
        <td>
          <a href="{{path('mon_control_add', {'id': scenario.id})}}">{{ 'mon_control_create' | trans() | raw()}}</a>
          <a href="{{path('mon_scenario_edit', {'id': scenario.id})}}">{{ 'mon_control_edit' | trans() | raw()}}</a>
          <a href="{{path('mon_scenario_delete', {'id': scenario.id})}}">{{ 'mon_control_delete' | trans() | raw()}}</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  {% endif %}

  
</div> <!-- /container -->
{% endblock %}